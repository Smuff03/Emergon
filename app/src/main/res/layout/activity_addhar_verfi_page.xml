<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addhar_verfi_page">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Addhar no. below"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:id="@+id/instruction_txt"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:width="180sp"
        android:layout_below="@id/instruction_txt"
        android:hint="Addhar no."
        android:layout_marginTop="100dp"
        android:id="@+id/addhar_input_box"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addhar_input_box"
        android:layout_marginTop="80dp"
        android:width="180dp"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>